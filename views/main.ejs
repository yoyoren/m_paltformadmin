<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>MES协作平台</title>
  <style type="text/css">
  *{padding: 0; margin: 0;}
  html,body {line-height: 1.5; color: #333; font-size: 12px;}
  body{background: #f6f6f6;}
.al-head{height: 60px; background: #333; color: #fff; line-height: 60px; padding: 0 20px;}
.al-head img{vertical-align: middle; margin-right: 20px;margin-top:10px;}
.al-center{padding: 40px;}
.enter-item{width: 220px; height: 70px; border: 2px solid #ccc; border-radius: 10px; display: inline-block; margin: 20px; text-decoration: none; color: #1184c0; padding: 20px; text-align: left; font-size: 16px;}
.enter-item img{vertical-align: middle; margin-right: 10px;}
.enter-item span{ width: 136px; vertical-align: middle; line-height: 1.5; display: inline-block;} 
.enter-item:hover{border: 2px solid #1184c0; box-shadow: 0 0 10px #727272; background: #fff;}
.al-footer{width: 100%; box-sizing:border-box;}
  </style>
  <script src="https://land.xiaomi.net/res/bc418e8/scripts/micloudfe/jquery-1.10.2.min.js"></script>

 
 
</head>
<body>
	<div class="al-head" id="home"><img src="<%=STATIC_DOMAIN%>admin/img/admin-mes-logo.png" width="120" /></div>
	<div class="al-center" id="container">
	</div>
	<div class="al-center" id="mod-container" style="display:none;padding:0">
	<iframe id="show_container" frameborder="0" width="100%"  height="100%" ></iframe>
	</div>
	<div class="al-footer al-head">技术支持：任远  Tel:18688943324</div>
	<script>var config = <%-data%></script>
	<script>
        location.hash = '';
	
	var html = '';
	var mod = {};
	var modContainer = $('#show_container');
	var homeContainer = $('#container');
	for(var i=0;i<config.length;i++){
	   var d = config[i];
	   mod[d.name] = d;
           html+='<a href="#'+d.name+'" class="enter-item project_item" url="'+d.url+'"><img src="<%=STATIC_DOMAIN%>admin/img/'+d.icon+'"/><span>'+d.chnName+'</span></a>';
	}

	$('#container').html(html);
	$('body').delegate('.project_item','click',function(){
	  var _this = $(this);
	  var url = _this.attr('url');
          $('#mod-container').show();
          $('#container').hide();
	  $('#show_container').attr('src',url);
	});
	$('#home').click(function(){
	  location.hash = '';
	});
	$(window).bind('hashchange',function(){
	  var m = location.hash.replace(/^#/,'');
	  if(m in mod){
	     homeContainer.hide();
	     modContainer.show();
	     modContainer.attr('src',mod[m].url);
	  }else{
	     homeContainer.show();
	     modContainer.hide();
	  }
	});
	
	</script>
</body>
</html>